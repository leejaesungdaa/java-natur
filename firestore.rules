rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /admins/{adminId} {
      allow create: if request.auth != null && request.auth.uid == adminId;
      
      allow read: if request.auth != null;
      
      allow update: if request.auth != null && (
        (request.auth.uid == adminId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']))
        ||
        (request.auth.uid != adminId && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.employeeManagement == true)
      );
      
      allow delete: if false;
    }

    match /products/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }

    match /inquiries/{document=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    match /company_history/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }
    
    match /contact_info/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }
    
    match /vinegar_info/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }
    
    match /vinegar_stories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }
    
    match /vinegar_videos/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }
    
    match /vinegar_process/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.permissions.websiteManagement == true;
    }
  }
}